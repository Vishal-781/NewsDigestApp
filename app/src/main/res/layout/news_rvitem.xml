<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:layout_margin="8dp"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

         <ImageView
             android:id="@+id/imRv2"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
             android:src="@color/dark"/>

        <TextView
            android:id="@+id/News_Heading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imRv2"
            android:textColor="@color/dark"
            android:textStyle="bold"
            android:ellipsize="end"
            android:layout_margin="2dp"
            android:maxLines="2"
            android:padding="3dp"
            android:textSize="18sp"
            android:text="News Heading"/>

        <TextView
            android:id="@+id/news_sub_heading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/News_Heading"
            android:layout_marginStart="4dp"
            android:layout_marginTop="5dp"
            android:maxLines="3"
            android:ellipsize="end"
            android:text="subheading" />


        <ImageButton
            android:id="@+id/bookmarksid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_margin="4dp"
            android:src="@drawable/ic_baseline_bookmark_border_24"
            android:layout_below="@id/news_sub_heading"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/news_sub_heading"
            android:layout_alignParentEnd="true"
             android:layout_margin="4dp"
            android:layout_centerVertical="true"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="328dp"
            android:layout_marginBottom="4dp"
            android:background="@color/white"
            android:src="@drawable/ic_baseline_share_24" />


    </RelativeLayout>



</androidx.cardview.widget.CardView>